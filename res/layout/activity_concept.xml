<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:padding= "30sp">

	    <TextView
	        android:id="@+id/concept_t1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="27sp"
	        android:textSize="27sp"
	        android:textStyle="bold" />

	    <ImageView
	        android:id="@+id/concept_img1"
	        android:layout_width="match_parent"
	        android:layout_height="500sp"
            android:src="@drawable/company_ouritem1_pic1"
	        android:paddingTop="9sp" />
	

	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal" >
		    <TextView
	            android:id="@+id/concept_t3"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="3"
	            android:lineSpacingExtra="7sp"
	            android:textStyle="bold"
	            android:textSize="21sp" />
		    <TextView
	            android:id="@+id/concept_t4"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:lineSpacingExtra="7sp"
	            android:textSize="20sp" />
	    </LinearLayout>
        <ImageView
	        android:id="@+id/concept_img2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="9sp" />
        
        <TextView
            android:id="@+id/concept_t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17sp"
            android:lineSpacingExtra="7sp"
            android:textSize="20sp" />
        
        <ImageView
            android:id="@+id/concept_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView
            android:id="@+id/concept_t5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17sp"
            android:lineSpacingExtra="7sp"
            android:textSize="20sp" />
</LinearLayout>

